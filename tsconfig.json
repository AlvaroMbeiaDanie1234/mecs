  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "Node16", // <<< Aqui corrigido
    "moduleResolution": "Node16",
    "strict": true,
    "allowImportingTsExtensions": true, // <<< Aqui mantido
